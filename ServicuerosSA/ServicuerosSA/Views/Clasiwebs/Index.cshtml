@model IEnumerable<ServicuerosSA.Models.Clasiweb>

@{
    ViewData["Title"] = "Index";
}

<h2>Ingreso de Clasificacion WebBlue</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Crear nueva clasificacion WebBlue</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Detalle)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.clasiwebId">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.clasiwebId">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.clasiwebId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
